<UserControl x:Class="CSWPF.MVVM.View.AddingUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CSWPF.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

        <StackPanel Name="PanelForAdd" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Width="400" Height="40" Margin="5" Name="LoginTextBox"/>
            <TextBox Width="400" Height="40" Margin="5" Name="PasswordTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Click="AddBtClick" Width="400" Height="40" Margin="5" Content="Добавить"/>
            </StackPanel>
        </StackPanel>
    
</UserControl>
